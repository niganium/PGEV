<div class="container  text-center">
<%= form_with(model: @event, local: true, url: choose_new_or_edit) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2 class="alert alert-warning" role="alert"><%= @event.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li class="alert alert-warning" role="alert"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <br></br>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content, id: :content %>
  </div>
  <br></br>
  <div class="field text-center">
    <%= form.label :image%>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    
  </div>
  <br></br>
   <div>
    <%= form.label :area %>
    <%= form.text_field :area %>
  </div>
  <br></br>
  <div class='field'>
    <%= form.label :e_tag, 'タグ（カンマ区切りで入力）' %><br/>
    <%= text_field_tag 'event[etag_list]', @event.etag_list.join(',') %>
  </div>
  
  <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
    NEW
  <% end %>
<% end %>

<%= link_to "イベント一覧画面にもどる", events_path %>
</div>